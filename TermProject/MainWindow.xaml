        <Label x:Name="SetUserLabel" Content="Set Current User" Grid.Column="2" HorizontalAlignment="Left" Margin="94,269,0,0" Grid.Row="1" VerticalAlignment="Top" FontFamily="Arial" FontSize="14" FontWeight="Bold"/>
