        <Label x:Name="CurrentUserID" Content="FgQCX3ztjhellw2hyRedxg" Grid.Column="2" HorizontalAlignment="Left" Margin="341.657,334.333,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="14" FontFamily="Arial" FontWeight="Bold" Width="207" Grid.ColumnSpan="2" Background="White"/>
