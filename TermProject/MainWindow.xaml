        <Label x:Name="SelectedBusinessHours" Content="" Grid.Column="3" HorizontalAlignment="Left" Margin="205.657,368.333,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="14" FontFamily="Arial" FontWeight="Bold" Width="386" Background="#FFFFFDFD" Grid.ColumnSpan="2"/>
        <Button x:Name="ShowCheckinsButton" Content="ShowCheckins" Grid.Column="3" HorizontalAlignment="Left" Margin="204.657,437.333,0,0" Grid.Row="1" VerticalAlignment="Top" Width="389" RenderTransformOrigin="0.742,0.113" Grid.ColumnSpan="2" Height="25" Click="ShowCheckinsButton_Click"/>
        <Button x:Name="ShowTipsButton" Content="ShowTips" Grid.Column="3" HorizontalAlignment="Left" Margin="204.657,403.333,0,0" Grid.Row="1" VerticalAlignment="Top" Width="388" Grid.ColumnSpan="2" Height="25" Click="ShowTipsButton_Click"/>

    </Grid>
</Window>
